@model Veterinaria.DAL.Cita

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles de la Cita</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h4 class="text-secondary">Información General</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Fecha y Hora:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaHora)</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4">Diagnóstico:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Diagnostico)</dd>

                <dt class="col-sm-4">Mascota:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Mascota.NombreMascota)</dd>

                <dt class="col-sm-4">Veterinario Principal:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.VeterinarioPrincipal.Nombre)</dd>

                <dt class="col-sm-4">Veterinario Secundario:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.VeterinarioSecundario.Nombre)</dd>

                <dt class="col-sm-4">Estado de la Cita:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstadoCita.EstadoCitaNombre)</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title">Información de Medicamentos</h5>
        </div>
        <div class="card-body">
            @foreach (var item in Model.MedicamentosCita)
            {
                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Nombre:</strong> @Html.DisplayFor(modelItem => item.Medicamento.NombreMedicamento)
                    </div>
                    <div class="col-md-6">
                        <strong>Dosis:</strong> @Html.DisplayFor(modelItem => item.Dosis)
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.CitaID" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
