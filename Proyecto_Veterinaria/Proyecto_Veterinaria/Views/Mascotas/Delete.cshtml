@model Veterinaria.DAL.Mascota

@{
    ViewData["Title"] = "Eliminar Mascota";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 60%;
        border-radius: 5px;
        margin: 20px auto;
        background: #fff;
        padding: 2px 16px 16px 16px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .card h1, .card h3 {
            text-align: center;
        }

    .info-section {
        display: flex;
        width: 100%;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .info {
        padding: 10px;
        margin: 5px;
        flex-basis: 48%; /* approximately half the width of the card, minus margin */
        background-color: #f2f2f2;
        border-radius: 5px;
        box-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .info-title {
        color: #007bff;
        font-size: 16px;
        margin: 0;
        font-weight: 500;
    }

    .info-content {
        font-size: 14px;
        margin-top: 5px;
    }

    .footer {
        width: 100%;
        text-align: center;
        padding: 10px 16px;
    }

    .btn-danger, .btn-secondary {
        color: white;
        border: none;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="card">
    <h1>Eliminar</h1>
    <h3>¿Estás seguro de que quieres eliminar esto?</h3>

    <div class="info-section">
        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.NombreMascota)</div>
            <div class="info-content">@Html.DisplayFor(model => model.NombreMascota)</div>
        </div>
        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.Edad)</div>
            <div class="info-content">@Html.DisplayFor(model => model.Edad)</div>
        </div>
        <!-- Add other fields similarly -->

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.Peso)</div>
            <div class="info-content">@Html.DisplayFor(model => model.Peso)</div>
        </div>

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.FechaCreacion)</div>
            <div class="info-content">@Html.DisplayFor(model => model.FechaCreacion)</div>
        </div>

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.FechaModificacion)</div>
            <div class="info-content">@Html.DisplayFor(model => model.FechaModificacion)</div>
        </div>

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.Estado)</div>
            <div class="info-content">@Html.DisplayFor(model => model.Estado)</div>
        </div>

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.UsuarioCreacion)</div>
            <div class="info-content">@Html.DisplayFor(model => model.UsuarioCreacion.Id)</div>
        </div>

        <div class="info">
            <div class="info-title">@Html.DisplayNameFor(model => model.UsuarioModificacion)</div>
            <div class="info-content">@Html.DisplayFor(model => model.UsuarioModificacion.Id)</div>
        </div>
        <!-- Repeat for other fields -->
    </div>

    <div class="footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="MascotaID" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>
