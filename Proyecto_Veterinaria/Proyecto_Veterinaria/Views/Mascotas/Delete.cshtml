@model Veterinaria.DAL.Mascota

@{
    ViewData["Title"] = "Eliminar Mascota";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h1 class="text-center">Eliminar Mascota</h1>
            <h3 class="text-center">¿Estás seguro de que quieres eliminar esto?</h3>
        </div>

        <div class="card-body">
            <div class="info-section mb-4">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreMascota):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreMascota)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Edad):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Edad)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Peso):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Peso)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCreacion):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaModificacion):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaModificacion)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UsuarioCreacion):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioCreacion.Nombre)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UsuarioModificacion):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioModificacion.Nombre)</dd>
                    <!-- Additional fields can be similarly added -->
                </dl>
            </div>

            <div class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MascotaID" />
                    <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
