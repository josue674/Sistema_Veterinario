@model Veterinaria.DAL.Mascota

@{
    ViewData["Title"] = "Editar Mascota";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center">Editar Mascota</h1>
        </div>
        <div class="card-body">
            <h4 class="text-secondary">Detalles de la Mascota</h4>
            <hr />
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="MascotaID" />

                <div class="form-group">
                    <label asp-for="NombreMascota" class="control-label">Nombre de la Mascota</label>
                    <input asp-for="NombreMascota" class="form-control" placeholder="Ingrese el nombre de la mascota" />
                    <span asp-validation-for="NombreMascota" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Edad" class="control-label">Edad</label>
                    <input asp-for="Edad" class="form-control" placeholder="Ingrese la edad de la mascota" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Peso" class="control-label">Peso (kg)</label>
                    <input asp-for="Peso" class="form-control" placeholder="Ingrese el peso de la mascota" />
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImagenMascota" class="control-label">Imagen Actual</label>
                    <div class="mb-3">
                        <img src="@Url.Action("GetImagenMascota", "Mascotas", new { id = Model.MascotaID })" alt="Imagen Mascota" class="img-thumbnail" />
                    </div>
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="Estado" type="checkbox" />
                    <label class="form-check-label" asp-for="Estado">Estado Activo</label>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
