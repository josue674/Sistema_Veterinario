@model IEnumerable<Veterinaria.DAL.Mascota>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMascota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenMascota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioDueno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMascota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMascota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagenMascota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioCreacion.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioModificacion.Nombre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioDueno.Nombre)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMascota.DescripcionTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raza.DescripcionRaza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genr.TipoGenero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MascotaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MascotaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MascotaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
