@model Veterinaria.DAL.MedicamentoCita

@{
    ViewData["Title"] = "Create";
    var citaId = ViewData["CitaID"] ;
}

<h1>Create</h1>

<h4>MedicamentoCita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@citaId" class="control-label"></label>
                <input name="CitaID" value="@citaId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MedicamentoID" class="control-label"></label>
                <select asp-for="MedicamentoID" class ="form-control" asp-items="ViewBag.MedicamentoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Dosis" class="control-label"></label>
                <input asp-for="Dosis" class="form-control" />
                <span asp-validation-for="Dosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Citas" asp-action="Edit" asp-route-id="@citaId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
