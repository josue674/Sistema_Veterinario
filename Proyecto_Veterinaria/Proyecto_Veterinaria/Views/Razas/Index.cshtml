@model IEnumerable<Veterinaria.DAL.Raza>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionRaza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMascota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionRaza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMascota.DescripcionTipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RazaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RazaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RazaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
